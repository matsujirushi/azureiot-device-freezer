<Window x:Class="Freezer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Freezer"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400" Loaded="Window_Loaded">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Telemetry interval" Width="100" Margin="4" TextAlignment="Right"/>
                <TextBox x:Name="txtTelemetryInterval" Text="5" Width="40" Margin="4" VerticalAlignment="Top"/>
                <TextBlock Text="seconds" Margin="4" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Temperature low" Width="100" Margin="4" TextAlignment="Right"/>
                <TextBox x:Name="txtTemperatureLow" Text="20" Width="40" Margin="4" VerticalAlignment="Top"/>
                <TextBlock Text="C" Margin="4" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Temperature high" Width="100" Margin="4" TextAlignment="Right"/>
                <TextBox x:Name="txtTemperatureHigh" Text="20" Width="40" Margin="4" VerticalAlignment="Top"/>
                <TextBlock Text="C" Margin="4" VerticalAlignment="Top"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button x:Name="btnConnect" Content="Connect" Width="80" Height="40" Margin="4" Click="btnConnect_Click"/>
            <Button x:Name="btnDisconnect" Content="Disconnect" Width="80" Height="40" Margin="4" Click="btnDisconnect_Click"/>
        </StackPanel>
    </Grid>
</Window>
